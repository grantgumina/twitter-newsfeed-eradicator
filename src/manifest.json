{
    "manifest_version": 2,
    "name": "Twitter Timeline Eradicator",
    "short_name": "Twitter Timeline Eradicator",
    "version": "0.0.1",

    "description": "Get rid fo your Twitter addiction",

    "permissions": [
        "tabs"
    ],

    "content_scripts": [{
        "matches": ["*://*.twitter.com/*"],
        "run_at": "document_end",
        "js": ["js/content.js"],
        "css": ["css/quote.css"]
    }],

    "icons": {
        "16": "img/yinyang_16.png",
        "48": "img/yinyang_48.png",
        "128": "img/yinyang_128.png"
    }
}
